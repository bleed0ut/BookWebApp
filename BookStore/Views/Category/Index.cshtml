@model List<Category>

@{

}

<div class="row-6">
    <div class="col-6">
        <h2>List of Categories</h2>
    </div>
    <div class="col-6">
        <a asp-controller="Category" asp-action="Create" class="btn-primary">Create a category</a>
    </div>
</div>
<h1>Category collection</h1>
<div>
    <table class=" table table-bordered">
        <thead>
            <tr>
                <td>Name</td>
                <td>Description</td>
                <td>DisplayOrder</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model) {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.Description</td>
                    <td>@category.DisplayOrder</td>
                </tr>
            }
        </tbody>
    </table>
</div>
