@model Book
h1>Delete a category</h1>
<form method="POST">
    <div class="border p-3 mt-4">
        <div class="border p-3 mt-4">
            <div class="mb-3 row">
                <label asp-for="Title"> Title </label>
                <input asp-for="Title" disabled />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="Description"> Description </label>
                <input asp-for="Description" disabled />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="Author"> Author </label>
                <input asp-for="Author" disabled />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="Price"> Price </label>
                <input asp-for="Price" disabled />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3 row">
                <label asp-for="CategoryId"> CategoryId </label>
                <input asp-for="CategoryId" disabled/>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
    </div>
        <button type="submit" class="btn btn-danger">Delete</button>
    </div>
</form>
