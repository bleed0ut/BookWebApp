@model BookVM
<h1>@(Model.Book.Id == 0? "Create" : "Update") a Book</h1>
<form method="POST" >
    <div class="border p-3 mt-4">
        <div class="mb-3 row">
            <label asp-for="Book.Title"> Title </label>
            <input asp-for="Book.Title"/>
            <span asp-validation-for="Book.Title" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Book.Description"> Description </label>
            <input asp-for="Book.Description" />
            <span asp-validation-for="Book.Description" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Book.Author"> Author </label>
            <input asp-for="Book.Author" />
            <span asp-validation-for="Book.Author" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Book.Price"> Price </label>
            <input asp-for="Book.Price" />
            <span asp-validation-for="Book.Price" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Book.CategoryId">Category</label>
            <select asp-for="Book.CategoryId" asp-items="@Model.Categories"></select>
            <span asp-validation-for="Book.CategoryId"></span>
        </div>
     </div>
    <button type="submit" class="btn-primary">@(Model.Book.Id == 0 ? "Create" : "Update")</button>
        <div>
            <a asp-controller="Book" asp-action="Index" class="btn btn-primary">Back to the list</a>
        </div> 
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}