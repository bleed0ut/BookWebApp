@model Book
<h1>@(Model.Id == 0? "Create" : "Update") a Book</h1>
<form method="POST" >
    <div class="border p-3 mt-4">
        <div class="mb-3 row">
            <label asp-for="Title"> Title </label>
            <input asp-for="Title"/>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Description"> Description </label>
            <input asp-for="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Author"> Author </label>
            <input asp-for="Author" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Price"> Price </label>
            <input asp-for="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="CategoryId"> CategoryId </label>
            <input asp-for="CategoryId" />
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
     </div>
    <button type="submit" class="btn-primary">@(Model.Id == 0 ? "Create" : "Update")</button>
        <div>
            <a asp-controller="Book" asp-action="Index" class="btn btn-primary">Back to the list</a>
        </div> 
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}